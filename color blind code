#include <iostream>
#include <limits>
using namespace std;


void input (float &mother, float &father) {

    while (true) {
cout << "is the mother a carrier?" << endl;
cout << "1 for yes & 2 for no." << endl;
cin >> mother;

   if (cin.fail()) {
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            cout << "Invalid input." << endl; // checks if input is invalid, if it is invalid it loops
            cout << "" << endl;
    }

    else if (mother > 2) {
    cout << " enter 1 or 2" << endl;
    cout << "" << endl;
    }

    else if (mother < 1){
    cout << " enter 1 or 2" << endl;
    cout << "" << endl;
    }

    else {
        break;
      }
}

     while (true) {
cout << "is the father a carrier?" << endl;
cout << "1 for yes & 2 for no." << endl;
cin >> father;

    if (cin.fail()) {
            cin.clear();
            cin.ignore(numeric_limits<streamsize>::max(), '\n');
            cout << "Invalid input." << endl; // checks if input is invalid, if it is invalid it loops
            cout << "" << endl;
    }

    else if (father > 2){
    cout << " enter 1 or 2" << endl;
    cout << "" << endl;
    }

    else if (father < 1){
    cout << " enter 1 or 2" << endl;
    cout << "" << endl;
    }

    else {
        break;
    }
}

}

int main (){

    float mother, father;

input(mother, father);

return 0;

}
